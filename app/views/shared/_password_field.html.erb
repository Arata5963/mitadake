<%# app/views/shared/_password_field.html.erb %>
<%
  placeholder ||= ""
  autocomplete ||= "off"
  show_hint ||= false
  minimum_length ||= 6
%>

<div>
  <%= form.label field_name, label_text, class: "block text-xs text-gray-500 mb-1" %>

  <div class="relative" data-controller="password-toggle" style="position: relative;">
    <%= form.password_field field_name,
          autocomplete: autocomplete,
          placeholder: placeholder,
          data: { password_toggle_target: "input" },
          class: "w-full px-0 py-2 pr-10 border-0 border-b border-gray-300 text-gray-900 placeholder-gray-300 focus:border-gray-900 focus:ring-0 focus:outline-none transition-colors bg-transparent autofill:bg-transparent autofill:shadow-[inset_0_0_0px_1000px_rgb(255,255,255)]",
          style: "padding-right: 2.5rem;" %>

    <button type="button"
            data-action="click->password-toggle#toggle"
            aria-label="パスワードを表示/非表示"
            style="position: absolute; right: 0; top: 50%; transform: translateY(-50%); outline: none; box-shadow: none;"
            class="text-gray-400 hover:text-gray-600 transition-colors p-1"
            onfocus="this.style.outline='none'; this.style.boxShadow='none';"
            onblur="this.style.outline='none'; this.style.boxShadow='none';">

      <svg data-password-toggle-target="iconShow"
           class="w-5 h-5"
           aria-hidden="true"
           fill="none"
           viewBox="0 0 24 24"
           stroke="currentColor"
           stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>

      <svg data-password-toggle-target="iconHide"
           class="w-5 h-5 hidden"
           aria-hidden="true"
           fill="none"
           viewBox="0 0 24 24"
           stroke="currentColor"
           stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
      </svg>
    </button>
  </div>

  <% if show_hint %>
    <p class="text-xs text-gray-400 mt-1"><%= minimum_length %>文字以上</p>
  <% end %>
</div>

<%# app/views/notifications/_notification.html.erb %>
<%# locals: notification %>

<%= button_to mark_as_read_notification_path(notification),
      method: :post,
      class: "w-full text-left rounded-lg border transition-all #{notification.opened? ? 'bg-white border-gray-100' : 'bg-gray-100 border-gray-200'}" do %>
  <div class="p-3 flex items-start gap-3">
    <%# 通知アイコン %>
    <div class="flex-shrink-0 h-10 w-10 rounded-full <%= notification.opened? ? 'bg-gray-100' : 'bg-gray-200' %> flex items-center justify-center">
      <% if notification.notifiable_type == 'Cheer' %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      <% elsif notification.notifiable_type == 'Comment' %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      <% else %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
      <% end %>
    </div>

    <%# 通知内容 %>
    <div class="flex-1 min-w-0">
      <p class="text-sm <%= notification.opened? ? 'text-gray-500' : 'text-gray-900 font-medium' %>">
        <% if notification.notifiable_type == 'Cheer' %>
          <span class="font-semibold"><%= notification.notifier&.name || '誰か' %></span>さんがあなたの投稿を応援しました
        <% elsif notification.notifiable_type == 'Comment' %>
          <span class="font-semibold"><%= notification.notifier&.name || '誰か' %></span>さんがあなたの投稿にコメントしました
        <% else %>
          新しい通知があります
        <% end %>
      </p>
      <p class="mt-1 text-xs text-gray-400">
        <%= time_ago_in_words(notification.created_at) %>前
      </p>
    </div>

    <%# 未読インジケータ %>
    <% unless notification.opened? %>
      <div class="flex-shrink-0 h-2 w-2 rounded-full bg-gray-900"></div>
    <% end %>
  </div>
<% end %>

<%#
  app/views/shared/_sidebar.html.erb
  ==========================================
  スライドインサイドバー
  ==========================================

  【このパーシャルの役割】
  ヘッダーのアバターをクリックすると表示されるスライドメニュー。
  ログイン状態によって表示内容が変わる。

  【構成要素】
  - オーバーレイ（黒い半透明背景）
  - サイドバーパネル（右からスライドイン）
    - ヘッダー部分（ユーザー情報/ロゴ）
    - メニュー部分（ナビゲーションリンク）
    - フッター部分（コピーライト）

  【ログイン時のメニュー】
  - マイページ
  - 利用規約
  - プライバシーポリシー
  - お問い合わせ（外部リンク）
  - ログアウト

  【未ログイン時のメニュー】
  - ログイン
  - 新規登録
  - 利用規約
  - プライバシーポリシー
  - お問い合わせ

  【Stimulusコントローラー】
  sidebar:
    - open: サイドバーを開く
    - close: サイドバーを閉じる
%>

<%# オーバーレイ %>
<div data-sidebar-target="overlay"
     data-action="click->sidebar#close"
     class="fixed inset-0 z-50 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300">
</div>

<%# サイドバーパネル %>
<aside data-sidebar-target="panel"
       class="fixed right-0 top-0 bottom-0 z-50 w-72 bg-white shadow-xl translate-x-full transition-transform duration-300 ease-in-out flex flex-col">

  <%# ヘッダー部分 %>
  <div class="flex items-center justify-between p-4 border-b border-gray-200">
    <% if user_signed_in? %>
      <div class="flex items-center gap-3">
        <%= render "shared/avatar", user: current_user, size: :lg %>
        <div>
          <p class="font-medium text-gray-900"><%= display_name(current_user) %></p>
        </div>
      </div>
    <% else %>
      <div class="flex items-center gap-2">
        <%= image_tag "/favicon-32x32.png", alt: "mitadake?", class: "w-8 h-8 rounded-lg" %>
        <span class="text-lg font-bold text-gray-900">mitadake?</span>
      </div>
    <% end %>

    <%# 閉じるボタン %>
    <button type="button"
            data-action="click->sidebar#close"
            class="p-2 text-gray-500 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
      </svg>
    </button>
  </div>

  <%# メニュー部分 %>
  <nav class="flex-1 overflow-y-auto py-4">
    <% if user_signed_in? %>
      <%= link_to mypage_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
        <span>マイページ</span>
      <% end %>

      <div class="border-t border-gray-100 my-3 mx-4"></div>

      <%= link_to terms_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
        </svg>
        <span>利用規約</span>
      <% end %>

      <%= link_to privacy_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
        </svg>
        <span>プライバシーポリシー</span>
      <% end %>

      <%= link_to "https://forms.gle/k8SEXwr3B32EvhPY8",
            target: "_blank",
            rel: "noopener noreferrer",
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        <span>お問い合わせ</span>
      <% end %>

      <div class="border-t border-gray-100 my-3 mx-4"></div>

      <%= link_to destroy_user_session_path,
            data: { "turbo-method": :delete, action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.59L17 17l5-5-5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
        </svg>
        <span>ログアウト</span>
      <% end %>

    <% else %>
      <%= link_to new_user_session_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M10 17v-3H3v-4h7V7l5 5-5 5z"/>
        </svg>
        <span>ログイン</span>
      <% end %>

      <%= link_to new_user_registration_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
        <span>新規登録</span>
      <% end %>

      <div class="border-t border-gray-100 my-3 mx-4"></div>

      <%= link_to terms_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
        </svg>
        <span>利用規約</span>
      <% end %>

      <%= link_to privacy_path,
            data: { action: "click->sidebar#close" },
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
        </svg>
        <span>プライバシーポリシー</span>
      <% end %>

      <%= link_to "https://forms.gle/k8SEXwr3B32EvhPY8",
            target: "_blank",
            rel: "noopener noreferrer",
            class: "flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        <span>お問い合わせ</span>
      <% end %>
    <% end %>
  </nav>

  <%# フッター部分 %>
  <div class="p-4 border-t border-gray-100 text-center">
    <p class="text-xs text-gray-400">&copy; <%= Time.current.year %> mitadake?</p>
  </div>

</aside>

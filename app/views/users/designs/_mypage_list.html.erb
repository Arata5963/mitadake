<%# app/views/users/designs/_mypage_list.html.erb %>
<%# デザインE: リスト風 %>
<%# 動画とアクションを別々のリストアイテムとして表示 %>

<% current_action = user.current_action_plan %>
<% current_video = user.current_video %>

<div class="max-w-sm mx-auto px-4 py-6">
  <%# ヘッダー %>
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <% if user.avatar.present? %>
        <%= image_tag user.avatar.url, class: "w-10 h-10 rounded-xl object-cover" %>
      <% else %>
        <div class="w-10 h-10 rounded-xl bg-gray-900 flex items-center justify-center">
          <span class="text-white font-bold text-sm"><%= user.name&.first&.upcase || '?' %></span>
        </div>
      <% end %>
      <div>
        <h1 class="font-bold text-gray-900"><%= user.name.presence || "名無しさん" %></h1>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-xs text-gray-400"><%= user.post_entries.achieved.count %> 達成</span>
      <%= link_to edit_profile_path, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
      <% end %>
    </div>
  </div>

  <% if current_video && current_action %>
    <div class="space-y-3" data-controller="hero-video" data-hero-video-video-id-value="<%= current_video.youtube_video_id %>">
      <%# 動画アイテム %>
      <div class="bg-gray-50 rounded-xl p-3">
        <div class="flex gap-3">
          <%# サムネイル %>
          <div class="flex-shrink-0 w-24 group relative cursor-pointer rounded-lg overflow-hidden bg-black" style="aspect-ratio: 16/9;">
            <iframe
              id="hero-player-<%= current_video.youtube_video_id %>"
              data-hero-video-target="iframe"
              src="https://www.youtube.com/embed/<%= current_video.youtube_video_id %>?autoplay=1&mute=1&loop=1&playlist=<%= current_video.youtube_video_id %>&controls=0&playsinline=1&rel=0&modestbranding=1&showinfo=0&enablejsapi=1"
              class="absolute inset-0 w-full h-full pointer-events-none"
              frameborder="0" allow="autoplay" allowfullscreen>
            </iframe>
            <div class="absolute inset-0 z-10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                 data-action="click->hero-video#toggle">
              <div class="absolute inset-0 bg-black/30"></div>
              <div class="w-6 h-6 rounded-full bg-white flex items-center justify-center">
                <svg data-hero-video-target="playButton" class="w-3 h-3 text-black ml-0.5 hidden" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                <svg data-hero-video-target="pauseButton" class="w-3 h-3 text-black" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                </svg>
              </div>
            </div>
          </div>
          <%# 情報 %>
          <%= link_to post_path(current_video), class: "flex-1 min-w-0" do %>
            <p class="text-sm font-medium text-gray-900 line-clamp-2 leading-snug"><%= current_video.youtube_title %></p>
            <p class="text-xs text-gray-400 mt-1"><%= current_video.youtube_channel_name %></p>
          <% end %>
        </div>
      </div>

      <%# アクションアイテム %>
      <div class="bg-gray-50 rounded-xl p-3">
        <div class="flex items-start gap-3">
          <%= button_to achieve_post_post_entry_path(current_video, current_action),
                method: :patch, class: "flex-shrink-0 mt-0.5",
                form: { data: { turbo_confirm: "達成しますか？", turbo_frame: "_top" } } do %>
            <div class="w-5 h-5 rounded-full border-2 border-gray-400 hover:border-gray-900 hover:bg-gray-100 transition-colors"></div>
          <% end %>
          <div class="flex-1 min-w-0">
            <p class="text-sm text-gray-900"><%= current_action.content %></p>
            <% if current_action.deadline.present? %>
              <% is_overdue = current_action.deadline < Date.current %>
              <% is_today = current_action.deadline == Date.current %>
              <p class="text-xs mt-1 <%= is_overdue ? 'text-red-500' : 'text-gray-400' %>">
                <%= is_overdue ? '期限切れ' : (is_today ? '今日まで' : "#{l(current_action.deadline, format: :short)}まで") %>
              </p>
            <% end %>
          </div>
          <%= button_to post_post_entry_path(current_video, current_action),
                method: :delete,
                form: { data: { turbo_confirm: "削除しますか？", turbo_frame: "_top" } },
                class: "flex-shrink-0 text-gray-300 hover:text-red-500" do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <div class="bg-gray-50 rounded-xl py-12 text-center">
      <p class="text-sm text-gray-400 mb-3">やることがありません</p>
      <%= link_to posts_path, class: "text-sm text-gray-900 font-medium" do %>
        動画を探す →
      <% end %>
    </div>
  <% end %>
</div>

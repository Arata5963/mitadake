<%# メインレイアウト %>
<%# 共通ヘッダー・フラッシュ・モーダルコンテナを含むアプリ全体のレイアウト %>
<!DOCTYPE html>
<html lang="ja">

  <head>
    <%= display_meta_tags(default_meta_tags) %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="icon" href="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%# Tailwind を先に、Application を後に %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-109R2FXJBS"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-109R2FXJBS');
    </script>
  </head>

  <body class="min-h-screen bg-white flex flex-col">
    <%= render "shared/header" %>
    <%= render "shared/flash_messages" %>


    <main class="flex-1">
      <%= yield %>
    </main>

    <%# レコメンドモーダル用コンテナ %>
    <div id="recommendation_modal"></div>
    <%# 達成記録モーダル用コンテナ %>
    <div id="achievement_modal"></div>

  </body>
</html>

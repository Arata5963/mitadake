<%# app/views/users/designs/_mypage_dashboard.html.erb %>
<%# デザイン: ダッシュボード風（統計重視・進捗表示） %>

<% current_action = user.current_action_plan %>
<% current_video = user.current_video %>
<% achieved_count = user.post_entries.achieved.count %>
<% total_entries = user.post_entries.count %>
<% completion_rate = total_entries > 0 ? (achieved_count.to_f / total_entries * 100).round : 0 %>

<div class="max-w-sm mx-auto px-4 py-6 space-y-4">
  <%# ヘッダー %>
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <% if user.avatar.present? %>
        <%= image_tag user.avatar.url, class: "w-12 h-12 rounded-2xl object-cover" %>
      <% else %>
        <div class="w-12 h-12 rounded-2xl bg-gray-900 flex items-center justify-center">
          <span class="text-white font-bold text-lg"><%= user.name&.first&.upcase || '?' %></span>
        </div>
      <% end %>
      <div>
        <h1 class="font-bold text-gray-900"><%= user.name.presence || "名無しさん" %></h1>
        <p class="text-xs text-gray-400">おかえりなさい</p>
      </div>
    </div>
    <%= link_to edit_profile_path, class: "w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center text-gray-400 hover:text-gray-600 hover:bg-gray-200 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
    <% end %>
  </div>

  <%# 統計カード %>
  <div class="grid grid-cols-2 gap-3">
    <%# 達成率カード %>
    <div class="bg-emerald-50 rounded-2xl p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-xs font-medium text-emerald-600">達成率</span>
        <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
          <svg class="w-3.5 h-3.5 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-gray-900"><%= completion_rate %>%</p>
      <div class="mt-2 h-1.5 bg-emerald-200 rounded-full overflow-hidden">
        <div class="h-full bg-emerald-500 rounded-full transition-all" style="width: <%= completion_rate %>%"></div>
      </div>
    </div>

    <%# 達成数カード %>
    <div class="bg-amber-50 rounded-2xl p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-xs font-medium text-amber-600">達成数</span>
        <div class="w-6 h-6 rounded-full bg-amber-100 flex items-center justify-center">
          <svg class="w-3.5 h-3.5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-gray-900"><%= achieved_count %></p>
      <p class="text-xs text-gray-400 mt-1"><%= user.posts.count %> 動画を投稿</p>
    </div>
  </div>

  <% if current_video && current_action %>
    <%# 現在のタスク %>
    <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden" data-controller="hero-video" data-hero-video-video-id-value="<%= current_video.youtube_video_id %>">
      <div class="px-4 pt-4">
        <div class="flex items-center gap-2 mb-3">
          <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">進行中</span>
        </div>
      </div>

      <%# 動画 %>
      <div class="group relative cursor-pointer mx-4 rounded-xl overflow-hidden bg-gray-100" style="aspect-ratio: 16/9;">
        <iframe
          id="hero-player-<%= current_video.youtube_video_id %>"
          data-hero-video-target="iframe"
          src="https://www.youtube.com/embed/<%= current_video.youtube_video_id %>?autoplay=1&mute=1&loop=1&playlist=<%= current_video.youtube_video_id %>&controls=0&playsinline=1&rel=0&modestbranding=1&showinfo=0&enablejsapi=1&iv_load_policy=3"
          class="absolute inset-0 w-full h-full pointer-events-none"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
        <div class="absolute inset-0 z-10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-200"
             data-action="click->hero-video#toggle">
          <div class="absolute inset-0 bg-black/30"></div>
          <button type="button" class="relative z-10 w-12 h-12 rounded-full bg-white/90 hover:bg-white flex items-center justify-center shadow-lg">
            <svg data-hero-video-target="playButton" class="w-5 h-5 text-black ml-0.5 hidden" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <svg data-hero-video-target="pauseButton" class="w-5 h-5 text-black" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
            </svg>
          </button>
        </div>
      </div>

      <%# 情報 %>
      <div class="p-4">
        <%= link_to post_path(current_video), class: "block group/info" do %>
          <h3 class="text-sm font-semibold text-gray-900 line-clamp-1 group-hover/info:text-blue-600 transition-colors">
            <%= current_video.youtube_title %>
          </h3>
          <% if current_video.youtube_channel_name.present? %>
            <div class="flex items-center gap-1.5 mt-1">
              <% if current_video.youtube_channel_thumbnail_url.present? %>
                <%= image_tag current_video.youtube_channel_thumbnail_url, class: "w-4 h-4 rounded-full", alt: current_video.youtube_channel_name %>
              <% end %>
              <span class="text-gray-400 text-xs"><%= current_video.youtube_channel_name %></span>
            </div>
          <% end %>
        <% end %>

        <%# アクションプラン %>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex items-start gap-3">
            <%= button_to achieve_post_post_entry_path(current_video, current_action),
                  method: :patch, class: "flex-shrink-0 mt-0.5",
                  form: { data: { turbo_confirm: "達成しますか？", turbo_frame: "_top" } } do %>
              <div class="w-5 h-5 rounded border-2 border-gray-300 hover:border-emerald-500 hover:bg-emerald-50 transition-colors"></div>
            <% end %>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-700 leading-relaxed"><%= current_action.content %></p>
              <% if current_action.deadline.present? %>
                <% is_overdue = current_action.deadline < Date.current %>
                <% is_today = current_action.deadline == Date.current %>
                <div class="flex items-center gap-1 mt-1.5">
                  <svg class="w-3.5 h-3.5 <%= is_overdue ? 'text-red-500' : 'text-gray-400' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-xs <%= is_overdue ? 'text-red-500' : (is_today ? 'text-gray-900 font-medium' : 'text-gray-400') %>">
                    <%= is_overdue ? '期限切れ' : (is_today ? '今日まで' : "#{l(current_action.deadline, format: :short)}まで") %>
                  </span>
                </div>
              <% end %>
            </div>
            <%= button_to post_post_entry_path(current_video, current_action),
                  method: :delete,
                  form: { data: { turbo_confirm: "削除しますか？", turbo_frame: "_top" } },
                  class: "flex-shrink-0 p-1 text-gray-300 hover:text-red-500 transition-colors" do %>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <%# Empty State %>
    <div class="bg-gray-50 border-2 border-dashed border-gray-200 rounded-2xl p-8 text-center">
      <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-gray-100 flex items-center justify-center">
        <svg class="w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-sm font-bold text-gray-900 mb-1">タスクがありません</h2>
      <p class="text-xs text-gray-500 mb-4">動画から新しいアクションを始めましょう</p>
      <%= link_to posts_path, class: "inline-flex items-center gap-1.5 px-4 py-2 bg-gray-900 text-white text-sm rounded-lg font-medium hover:bg-gray-800 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        動画を探す
      <% end %>
    </div>
  <% end %>
</div>

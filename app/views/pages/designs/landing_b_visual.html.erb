<%# app/views/pages/designs/landing_b_visual.html.erb %>
<%# デザインB: カード・視覚的 - グラデーション&グラフィカル %>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">

  <%# ===== 1. ヒーローセクション ===== %>
  <section class="pt-12 pb-16 sm:pt-20 sm:pb-24 px-6">
    <div class="max-w-5xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <%# 左側：テキスト %>
        <div data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-right">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-full mb-6">
            <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
            YouTube × 行動変容
          </div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
            見ただけ？<br>
            <span class="text-gray-400">やってみた？</span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-600 leading-relaxed mb-8">
            動画で学んだことを、<br class="sm:hidden">
            <span class="font-semibold text-gray-900">7日以内に行動</span>に変える。<br>
            あなたの「見ただけ」を終わりにします。
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <%= link_to new_user_session_path, class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-gray-900 text-white font-semibold rounded-2xl hover:bg-gray-800 transition-all duration-300 hover:shadow-lg" do %>
              無料で始める
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            <% end %>
          </div>
        </div>

        <%# 右側：ビジュアル（モックアップ風） %>
        <div class="relative"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-left"
             data-scroll-animation-delay-value="200">
          <%# カード群で機能をビジュアル化 %>
          <div class="relative">
            <%# メインカード %>
            <div class="bg-white rounded-3xl shadow-2xl p-6 transform rotate-1">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-red-500 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="h-3 bg-gray-200 rounded w-3/4 mb-1"></div>
                  <div class="h-2 bg-gray-100 rounded w-1/2"></div>
                </div>
              </div>
              <div class="bg-gray-100 rounded-2xl aspect-video mb-4"></div>
              <div class="space-y-2">
                <div class="h-2 bg-gray-200 rounded w-full"></div>
                <div class="h-2 bg-gray-100 rounded w-2/3"></div>
              </div>
            </div>

            <%# フローティングカード - アクション %>
            <div class="absolute -bottom-6 -left-4 sm:-left-8 bg-white rounded-2xl shadow-xl p-4 transform -rotate-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">達成!</p>
                  <p class="text-xs text-gray-500">コレクションに追加</p>
                </div>
              </div>
            </div>

            <%# フローティングカード - 期限 %>
            <div class="absolute -top-4 -right-4 sm:-right-8 bg-white rounded-2xl shadow-xl p-4 transform rotate-3">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">あと5日</p>
                  <p class="text-xs text-gray-500">期限まで</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# ===== 2. 数字でインパクト ===== %>
  <section class="py-12 sm:py-16 px-6 bg-gray-900">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-3 gap-4 sm:gap-8">
        <div class="text-center"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up">
          <p class="text-3xl sm:text-5xl font-bold text-white mb-1">7</p>
          <p class="text-gray-400 text-xs sm:text-sm">日で行動</p>
        </div>
        <div class="text-center"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up"
             data-scroll-animation-delay-value="100">
          <p class="text-3xl sm:text-5xl font-bold text-white mb-1">1</p>
          <p class="text-gray-400 text-xs sm:text-sm">つに集中</p>
        </div>
        <div class="text-center"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up"
             data-scroll-animation-delay-value="200">
          <p class="text-3xl sm:text-5xl font-bold text-white mb-1">AI</p>
          <p class="text-gray-400 text-xs sm:text-sm">が提案</p>
        </div>
      </div>
    </div>
  </section>

  <%# ===== 3. 使い方（3ステップ）- カード形式 ===== %>
  <section class="py-20 sm:py-28 px-6">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-16"
           data-controller="scroll-animation"
           data-scroll-animation-animation-value="fade-up">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          使い方
        </h2>
        <p class="text-gray-600 text-lg">
          シンプルな3ステップ
        </p>
      </div>

      <div class="grid sm:grid-cols-3 gap-6 sm:gap-8">
        <%# ステップ1 %>
        <div class="bg-white rounded-3xl p-8 border border-gray-100 hover:border-gray-200 hover:shadow-lg transition-all duration-300"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up">
          <div class="w-14 h-14 bg-gradient-to-br from-red-500 to-red-600 text-white rounded-2xl flex items-center justify-center text-2xl font-bold mb-6 shadow-lg shadow-red-500/30">
            1
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">動画を選ぶ</h3>
          <p class="text-gray-600 leading-relaxed">
            YouTubeで気になる動画を見つけたら、URLを貼り付け。検索もできます。
          </p>
        </div>

        <%# ステップ2 %>
        <div class="bg-white rounded-3xl p-8 border border-gray-100 hover:border-gray-200 hover:shadow-lg transition-all duration-300"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up"
             data-scroll-animation-delay-value="100">
          <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-2xl flex items-center justify-center text-2xl font-bold mb-6 shadow-lg shadow-blue-500/30">
            2
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">アクション宣言</h3>
          <p class="text-gray-600 leading-relaxed">
            学んだことを「やること」として宣言。AIが具体的なアクションを提案します。
          </p>
        </div>

        <%# ステップ3 %>
        <div class="bg-white rounded-3xl p-8 border border-gray-100 hover:border-gray-200 hover:shadow-lg transition-all duration-300"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-up"
             data-scroll-animation-delay-value="200">
          <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-green-600 text-white rounded-2xl flex items-center justify-center text-2xl font-bold mb-6 shadow-lg shadow-green-500/30">
            3
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">7日以内に達成</h3>
          <p class="text-gray-600 leading-relaxed">
            達成したらチェック。あなただけのコレクションに追加されます。
          </p>
        </div>
      </div>
    </div>
  </section>

  <%# ===== 4. 特徴セクション - 交互レイアウト ===== %>
  <section class="py-20 sm:py-28 px-6 bg-gray-50">
    <div class="max-w-5xl mx-auto space-y-20 sm:space-y-28">
      <%# 特徴1: 1つに集中 %>
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <div data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-right">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-full mb-4">
            集中
          </div>
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
            1つに集中できる仕組み
          </h3>
          <p class="text-gray-600 text-lg leading-relaxed">
            今のアクションを達成するまで、次のアクションは登録できません。<br><br>
            「あれもこれも」ではなく「今これだけ」に集中。だからちゃんとやり切れます。
          </p>
        </div>
        <div class="bg-white rounded-3xl p-6 shadow-xl"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-left"
             data-scroll-animation-delay-value="100">
          <div class="space-y-4">
            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-2xl border-2 border-gray-900">
              <div class="w-10 h-10 bg-gray-900 rounded-xl flex items-center justify-center">
                <span class="text-white font-bold">1</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">今のアクション</p>
                <p class="text-sm text-gray-500">取り組み中</p>
              </div>
              <div class="w-16 h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="w-2/3 h-full bg-gray-900"></div>
              </div>
            </div>
            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-2xl opacity-50">
              <div class="w-10 h-10 bg-gray-300 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-500">次のアクション</p>
                <p class="text-sm text-gray-400">達成後に解放</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# 特徴2: AI提案 %>
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 bg-white rounded-3xl p-6 shadow-xl"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-right">
          <div class="space-y-3">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-purple-600">AIが提案</span>
            </div>
            <div class="p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors cursor-pointer">
              <p class="text-sm text-gray-700">毎朝5分、ストレッチをする</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors cursor-pointer">
              <p class="text-sm text-gray-700">今週中に1回、瞑想を試す</p>
            </div>
            <div class="p-3 bg-purple-50 rounded-xl border-2 border-purple-200">
              <p class="text-sm text-purple-700 font-medium">寝る前にスマホを見ない日を作る</p>
            </div>
          </div>
        </div>
        <div class="order-1 lg:order-2"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-left"
             data-scroll-animation-delay-value="100">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-purple-100 text-purple-700 text-sm font-medium rounded-full mb-4">
            AI
          </div>
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
            何をすべきかAIが提案
          </h3>
          <p class="text-gray-600 text-lg leading-relaxed">
            動画を観た後「で、何をすればいいの？」となりがち。<br><br>
            AIが動画の内容を分析して、具体的なアクションプランを提案します。
          </p>
        </div>
      </div>

      <%# 特徴3: カスタムサムネイル %>
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <div data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-right">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-amber-100 text-amber-700 text-sm font-medium rounded-full mb-4">
            記録
          </div>
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
            達成を自分だけの記録に
          </h3>
          <p class="text-gray-600 text-lg leading-relaxed">
            達成したアクションには、お気に入りの画像を設定できます。<br><br>
            あなただけの「やってみたコレクション」が、どんどん積み上がっていきます。
          </p>
        </div>
        <div class="grid grid-cols-2 gap-4"
             data-controller="scroll-animation"
             data-scroll-animation-animation-value="fade-left"
             data-scroll-animation-delay-value="100">
          <div class="bg-gradient-to-br from-pink-100 to-pink-200 rounded-2xl aspect-square flex items-center justify-center">
            <svg class="w-12 h-12 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl aspect-square flex items-center justify-center">
            <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <div class="bg-gradient-to-br from-green-100 to-green-200 rounded-2xl aspect-square flex items-center justify-center">
            <svg class="w-12 h-12 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <div class="bg-gradient-to-br from-amber-100 to-amber-200 rounded-2xl aspect-square flex items-center justify-center">
            <svg class="w-12 h-12 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# ===== 5. ランキングセクション ===== %>
  <section class="py-20 sm:py-28 px-6">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12"
           data-controller="scroll-animation"
           data-scroll-animation-animation-value="fade-up">
        <div class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full mb-4">
          ランキング
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          行動につながった動画
        </h2>
        <p class="text-gray-600 text-lg">
          再生数ではなく「行動された数」で発見
        </p>
      </div>

      <% if @ranking_posts.present? %>
        <div class="space-y-4">
          <% @ranking_posts.first(5).each_with_index do |post, index| %>
            <div class="bg-white rounded-2xl p-4 sm:p-6 border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all duration-300"
                 data-controller="scroll-animation"
                 data-scroll-animation-animation-value="fade-up"
                 data-scroll-animation-delay-value="<%= index * 80 %>">
              <div class="flex items-center gap-4 sm:gap-6">
                <%# ランク表示 %>
                <div class="flex-shrink-0">
                  <% if index == 0 %>
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-500 rounded-xl flex items-center justify-center shadow-lg shadow-yellow-500/30">
                      <span class="text-white font-bold text-lg">1</span>
                    </div>
                  <% elsif index == 1 %>
                    <div class="w-12 h-12 bg-gradient-to-br from-gray-300 to-gray-400 rounded-xl flex items-center justify-center">
                      <span class="text-white font-bold text-lg">2</span>
                    </div>
                  <% elsif index == 2 %>
                    <div class="w-12 h-12 bg-gradient-to-br from-amber-600 to-amber-700 rounded-xl flex items-center justify-center">
                      <span class="text-white font-bold text-lg">3</span>
                    </div>
                  <% else %>
                    <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                      <span class="text-gray-500 font-bold text-lg"><%= index + 1 %></span>
                    </div>
                  <% end %>
                </div>
                <%# サムネイル %>
                <img src="<%= post.youtube_thumbnail_url(size: :mqdefault) %>"
                     alt=""
                     class="w-20 sm:w-28 h-12 sm:h-16 object-cover rounded-xl flex-shrink-0">
                <%# 情報 %>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-900 truncate text-sm sm:text-base"><%= post.youtube_title %></p>
                  <p class="text-xs sm:text-sm text-gray-500 truncate"><%= post.youtube_channel_name %></p>
                </div>
                <%# アクション数 %>
                <div class="text-right flex-shrink-0">
                  <p class="text-2xl sm:text-3xl font-bold text-gray-900"><%= post.post_entries.count %></p>
                  <p class="text-xs text-gray-500">アクション</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <%# ===== 6. 最終CTA ===== %>
  <section class="py-20 sm:py-28 px-6">
    <div class="max-w-3xl mx-auto">
      <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-3xl p-10 sm:p-16 text-center"
           data-controller="scroll-animation"
           data-scroll-animation-animation-value="zoom-in">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          「見ただけ」を終わりにする
        </h2>
        <p class="text-gray-400 text-lg mb-10">
          今日から始めてみませんか？
        </p>
        <%= link_to new_user_session_path, class: "inline-flex items-center gap-3 px-10 py-5 bg-white text-gray-900 text-lg font-semibold rounded-2xl hover:bg-gray-100 transition-all duration-300 hover:scale-105 shadow-lg" do %>
          無料で始める
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        <% end %>
      </div>
    </div>
  </section>

</div>

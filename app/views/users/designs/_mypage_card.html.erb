<%# app/views/users/designs/_mypage_card.html.erb %>
<%# デザインD: カード重ね風 %>
<%# シンプルなカードスタイル、影で浮き上がり %>

<% current_action = user.current_action_plan %>
<% current_video = user.current_video %>

<div class="max-w-sm mx-auto px-4 py-6">
  <%# プロフィール %>
  <div class="flex items-center gap-3 mb-6">
    <% if user.avatar.present? %>
      <%= image_tag user.avatar.url, class: "w-11 h-11 rounded-full object-cover" %>
    <% else %>
      <div class="w-11 h-11 rounded-full bg-gradient-to-br from-gray-700 to-gray-900 flex items-center justify-center">
        <span class="text-white font-bold"><%= user.name&.first&.upcase || '?' %></span>
      </div>
    <% end %>
    <div class="flex-1">
      <h1 class="font-bold text-gray-900"><%= user.name.presence || "名無しさん" %></h1>
      <p class="text-xs text-gray-400"><%= user.post_entries.achieved.count %> 達成</p>
    </div>
    <%= link_to edit_profile_path, class: "text-gray-300 hover:text-gray-500" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
    <% end %>
  </div>

  <% if current_video && current_action %>
    <%# メインカード %>
    <div class="bg-white rounded-2xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] overflow-hidden" data-controller="hero-video" data-hero-video-video-id-value="<%= current_video.youtube_video_id %>">
      <%# 動画 %>
      <div class="group relative cursor-pointer" style="aspect-ratio: 16/9;">
        <iframe
          id="hero-player-<%= current_video.youtube_video_id %>"
          data-hero-video-target="iframe"
          src="https://www.youtube.com/embed/<%= current_video.youtube_video_id %>?autoplay=1&mute=1&loop=1&playlist=<%= current_video.youtube_video_id %>&controls=0&playsinline=1&rel=0&modestbranding=1&showinfo=0&enablejsapi=1"
          class="absolute inset-0 w-full h-full pointer-events-none"
          frameborder="0" allow="autoplay" allowfullscreen>
        </iframe>
        <div class="absolute inset-0 z-10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
             data-action="click->hero-video#toggle">
          <div class="absolute inset-0 bg-black/20"></div>
          <button type="button" class="relative z-10 w-12 h-12 rounded-full bg-white shadow-lg flex items-center justify-center">
            <svg data-hero-video-target="playButton" class="w-5 h-5 text-gray-900 ml-0.5 hidden" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <svg data-hero-video-target="pauseButton" class="w-5 h-5 text-gray-900" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
            </svg>
          </button>
        </div>
      </div>

      <%# コンテンツ %>
      <div class="p-4">
        <%= link_to post_path(current_video), class: "block mb-3" do %>
          <p class="text-sm font-medium text-gray-900 line-clamp-1"><%= current_video.youtube_title %></p>
          <p class="text-xs text-gray-400 mt-0.5"><%= current_video.youtube_channel_name %></p>
        <% end %>

        <div class="flex items-center gap-3 pt-3 border-t border-gray-100">
          <%= button_to achieve_post_post_entry_path(current_video, current_action),
                method: :patch, class: "flex-shrink-0",
                form: { data: { turbo_confirm: "達成しますか？", turbo_frame: "_top" } } do %>
            <div class="w-5 h-5 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors"></div>
          <% end %>
          <p class="flex-1 text-sm text-gray-700 line-clamp-2"><%= current_action.content %></p>
        </div>

        <% if current_action.deadline.present? %>
          <% is_overdue = current_action.deadline < Date.current %>
          <p class="text-xs mt-2 pl-8 <%= is_overdue ? 'text-red-500' : 'text-gray-400' %>">
            <%= is_overdue ? '期限切れ' : "#{l(current_action.deadline, format: :short)}まで" %>
          </p>
        <% end %>
      </div>
    </div>

  <% else %>
    <div class="bg-white rounded-2xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] py-14 px-6 text-center">
      <p class="text-gray-400 mb-4">アクションがありません</p>
      <%= link_to posts_path, class: "text-sm font-medium text-gray-900 underline" do %>
        動画を探す →
      <% end %>
    </div>
  <% end %>
</div>

<%# app/views/posts/_section_channels.html.erb %>
<%# 人気のチャンネルセクション（横スクロール） %>

<%= render layout: "shared/horizontal_scroll_section", locals: {
  title: "人気のチャンネル",
  button_top: "40px"
} do %>
  <% channels.each_with_index do |channel, index| %>
    <% rank = index + 1 %>
    <div class="flex-shrink-0 flex items-start gap-1" style="width: 100px; min-width: 100px;">
      <%# 大きなランキング番号 %>
      <div class="flex-shrink-0 w-6 flex items-center justify-center pt-8">
        <span class="text-2xl font-black text-gray-900"><%= rank %></span>
      </div>
      <%# チャンネルカード %>
      <%= link_to posts_path(channel: channel[:channel_name]),
         class: "flex-1 flex flex-col items-center group [-webkit-tap-highlight-color:transparent]" do %>
        <div class="w-20 h-20 rounded-full overflow-hidden bg-gray-100 mb-2 ring-2 ring-transparent group-hover:ring-gray-300 transition-all">
          <% if channel[:thumbnail_url].present? %>
            <%= image_tag channel[:thumbnail_url],
                  alt: channel[:channel_name],
                  class: "w-full h-full object-cover",
                  loading: "lazy" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-gray-200">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
          <% end %>
        </div>
        <span class="text-xs text-gray-700 text-center max-w-[80px] truncate group-hover:text-gray-900 transition-colors">
          <%= channel[:channel_name] %>
        </span>
        <span class="text-[10px] text-gray-400">
          <%= channel[:action_count] %>アクション
        </span>
      <% end %>
    </div>
  <% end %>
<% end %>

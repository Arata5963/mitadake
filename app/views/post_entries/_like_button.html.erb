<%# app/views/post_entries/_like_button.html.erb %>
<%# いいねボタン（ハート） - toggle_like を使用 %>

<div id="like_button_<%= post_entry.id %>" class="inline-flex items-center">
  <% if user_signed_in? %>
    <% liked = post_entry.liked_by?(current_user) %>
    <%= link_to toggle_like_post_post_entry_path(post_entry.post, post_entry),
                data: { turbo_method: :post },
                class: "inline-flex items-center gap-1 #{liked ? 'text-red-500 hover:text-red-400' : 'text-gray-400 hover:text-red-400'} transition-colors" do %>
      <% if liked %>
        <%# いいね済み（赤色で塗りつぶし） %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
      <% else %>
        <%# 未いいね（グレー・枠線のみ） %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
      <% end %>
      <% if post_entry.entry_likes.count > 0 %>
        <span class="text-xs font-medium"><%= post_entry.entry_likes.count %></span>
      <% end %>
    <% end %>
  <% else %>
    <%# 未ログイン（グレー） %>
    <div class="inline-flex items-center gap-1 text-gray-400">
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
      <% if post_entry.entry_likes.count > 0 %>
        <span class="text-xs font-medium"><%= post_entry.entry_likes.count %></span>
      <% end %>
    </div>
  <% end %>
</div>

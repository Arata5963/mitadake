<%# app/views/posts/recent.html.erb %>
<%# 最近の投稿一覧ページ %>

<div class="min-h-screen bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-8 py-6">
    <%# ヘッダー %>
    <div class="flex items-center gap-4 mb-6">
      <%= link_to posts_path, class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-xl font-bold text-gray-900">最近の投稿</h1>
      <span class="text-sm text-gray-500"><%= @posts.total_count %>件</span>
    </div>

    <% if @posts.blank? %>
      <div class="py-16 text-center">
        <span class="text-5xl block mb-4">📺</span>
        <p class="text-gray-700 font-medium mb-2">まだ投稿がありません</p>
      </div>
    <% else %>
      <%# グリッド表示 %>
      <div class="grid gap-4" style="grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));">
        <% @posts.each do |post| %>
          <%= render 'posts/post_card_note', post: post %>
        <% end %>
      </div>

      <%# ページネーション %>
      <% if @posts.total_pages > 1 %>
        <div class="mt-8 flex justify-center">
          <%= paginate @posts, theme: 'tailwind' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

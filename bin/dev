#!/usr/bin/env sh
# 開発サーバー起動スクリプト
# Foreman で Procfile.dev の全プロセス（Rails/Tailwind）を同時起動

if ! gem list foreman -i --silent; then
  echo "Installing foreman..."
  gem install foreman
fi

export PORT="${PORT:-3000}"             # デフォルトポート
export RUBY_DEBUG_OPEN="true"           # リモートデバッグ許可
export RUBY_DEBUG_LAZY="true"           # 遅延ロード

exec foreman start -f Procfile.dev "$@"

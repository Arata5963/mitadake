<%# app/views/shared/_header.html.erb %>
<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-14 items-center justify-between gap-4">

      <%# 左側：ロゴ（クリックでホームへ） %>
      <div class="flex-shrink-0">
        <%= link_to posts_path, class: "flex items-center gap-2 text-gray-900 hover:text-gray-600 transition-colors" do %>
          <span class="text-lg font-bold tracking-tight">mitadake?</span>
        <% end %>
      </div>

      <%# 右側：ナビゲーションアイコン %>
      <div class="flex items-center gap-1" data-controller="sidebar">

        <%# 投稿ボタン（note風） %>
        <% if user_signed_in? %>
          <%= link_to new_post_path,
                style: "display: inline-flex; align-items: center; gap: 4px; padding: 6px 14px; border-radius: 20px; font-size: 13px; font-weight: 600; text-decoration: none; transition: opacity 0.2s; background: #333; color: white; white-space: nowrap; flex-shrink: 0;",
                onmouseover: "this.style.opacity='0.8'",
                onmouseout: "this.style.opacity='1'" do %>
            <svg style="width: 12px; height: 12px; flex-shrink: 0;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
            </svg>
            <span>投稿</span>
          <% end %>
        <% end %>

        <%# プロフィール / サイドバートリガー %>
        <button type="button"
                data-action="click->sidebar#open"
                class="p-1 rounded-full transition-colors text-gray-500 hover:text-gray-700 hover:bg-gray-100 cursor-pointer flex-shrink-0">
          <% if user_signed_in? && current_user.avatar.present? %>
            <%= image_tag current_user.avatar.url, class: "w-8 h-8 rounded-full object-cover flex-shrink-0", style: "min-width: 32px; min-height: 32px;" %>
          <% else %>
            <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0" style="min-width: 32px; min-height: 32px;">
              <svg class="w-5 h-5 text-gray-500" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
          <% end %>
        </button>

        <%# サイドバー %>
        <%= render "shared/sidebar" %>
      </div>
    </div>
  </div>
</header>

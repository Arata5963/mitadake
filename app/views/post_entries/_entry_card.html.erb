<%# app/views/post_entries/_entry_card.html.erb %>
<%# デフォルト - シンプルなリストスタイル %>

<%= turbo_frame_tag dom_id(entry) do %>
<article class="group relative py-3 border-b border-gray-100 last:border-b-0">
  <div class="flex items-start gap-3">
    <%# チェックボックス %>
    <div class="flex-shrink-0 pt-0.5">
      <% if user_signed_in? && entry.user == current_user && !entry.achieved? %>
        <%= button_to achieve_post_post_entry_path(entry.post, entry),
              method: :patch,
              class: "block",
              form: { data: { turbo_confirm: "「#{truncate(entry.content, length: 20)}」を達成しますか？" } } do %>
          <div class="w-5 h-5 rounded border-2 border-gray-300 hover:border-gray-500 transition-colors cursor-pointer"></div>
        <% end %>
      <% elsif entry.achieved? %>
        <div class="w-5 h-5 rounded border-2 border-emerald-500 bg-emerald-500 flex items-center justify-center">
          <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      <% else %>
        <div class="w-5 h-5 rounded border-2 border-gray-300"></div>
      <% end %>
    </div>

    <%# コンテンツ %>
    <div class="flex-1 min-w-0">
      <p class="text-sm leading-relaxed <%= entry.achieved? ? 'text-gray-400 line-through' : 'text-gray-800' %>">
        <%= entry.content %>
      </p>

      <%# メタ情報 %>
      <div class="flex items-center gap-3 mt-1.5 text-xs text-gray-400">
        <%# ユーザー %>
        <div class="flex items-center gap-1.5">
          <% if entry.user&.avatar.present? %>
            <%= image_tag entry.user.avatar.url, class: "w-4 h-4 rounded-full object-cover" %>
          <% else %>
            <div class="w-4 h-4 rounded-full bg-gray-200 flex items-center justify-center">
              <span class="text-[9px] font-medium text-gray-500"><%= entry.user&.name&.first&.upcase || '?' %></span>
            </div>
          <% end %>
          <span><%= entry.user&.name %></span>
        </div>

        <%# 期限 %>
        <% if entry.deadline.present? %>
          <span class="<%= entry.deadline < Date.current && !entry.achieved? ? 'text-red-400' : '' %>">
            <%= l(entry.deadline, format: :short) %>
          </span>
        <% end %>
      </div>
    </div>

    <%# アクション %>
    <div class="opacity-0 group-hover:opacity-100 transition-opacity flex items-center gap-1 flex-shrink-0">
      <%= link_to post_path(entry.post), class: "p-1 rounded hover:bg-gray-100 transition-colors text-gray-400 hover:text-gray-600", data: { turbo_frame: "_top" } do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      <% end %>

      <% if user_signed_in? && entry.user == current_user %>
        <%= button_to post_post_entry_path(entry.post, entry),
              method: :delete,
              data: { turbo_confirm: "削除しますか？" },
              class: "p-1 rounded hover:bg-red-50 transition-colors text-gray-400 hover:text-red-500" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
</article>
<% end %>

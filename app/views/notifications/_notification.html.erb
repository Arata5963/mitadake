<%# app/views/notifications/_notification.html.erb %>
<%# locals: notification %>

<%= button_to mark_as_read_notification_path(notification),
      method: :post,
      class: "w-full text-left rounded-lg border transition-all #{notification.opened? ? 'bg-white border-gray-100' : 'bg-gray-100 border-gray-200'}" do %>
  <div class="p-3 flex items-start gap-3">
    <%# 通知アイコン %>
    <div class="flex-shrink-0 h-10 w-10 rounded-full <%= notification.opened? ? 'bg-gray-100' : 'bg-gray-200' %> flex items-center justify-center">
      <% if notification.notifiable_type == 'Cheer' %>
        <%# 応援（ハート） %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      <% elsif notification.notifiable_type == 'EntryFlame' %>
        <%# 炎マーク %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-orange-500' %>" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 23c-3.866 0-7-2.686-7-6 0-1.665.68-3.187 1.78-4.298-.274-1.606-.272-3.263.232-4.702.503-1.439 1.45-2.546 2.644-3.386C10.765 3.719 12 2.5 12 2.5s1.5 1.5 2.5 3c1 1.5 1.5 3 1.5 4.5 0 .562-.087 1.102-.248 1.607C17.315 12.714 19 14.647 19 17c0 3.314-3.134 6-7 6zm0-2c2.761 0 5-1.794 5-4 0-1.655-1.165-3.055-2.748-3.604l-.752-.26.347-.714c.305-.627.403-1.076.403-1.422 0-1-.333-2-1-3-.333-.5-.75-1-1.25-1.5-.5.5-.917 1-1.25 1.5-.667 1-1 2-1 3 0 .346.098.795.403 1.422l.347.714-.752.26C8.165 13.945 7 15.345 7 17c0 2.206 2.239 4 5 4z"/>
        </svg>
      <% elsif notification.notifiable_type == 'PostEntry' && notification.key == 'post_entry.deadline_today' %>
        <%# 期限当日 %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-red-500' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="M12 6v6l4 2"/>
        </svg>
      <% elsif notification.notifiable_type == 'Comment' %>
        <%# コメント %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      <% else %>
        <%# その他 %>
        <svg class="h-5 w-5 <%= notification.opened? ? 'text-gray-400' : 'text-gray-600' %>" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
      <% end %>
    </div>

    <%# 通知内容 %>
    <div class="flex-1 min-w-0">
      <p class="text-sm <%= notification.opened? ? 'text-gray-500' : 'text-gray-900 font-medium' %>">
        <% if notification.notifiable_type == 'Cheer' %>
          <span class="font-semibold"><%= notification.notifier&.name || '誰か' %></span>さんがあなたの投稿を応援しました
        <% elsif notification.notifiable_type == 'EntryFlame' %>
          <span class="font-semibold"><%= notification.notifier&.name || '誰か' %></span>さんがあなたのアクションプランを応援しました🔥
        <% elsif notification.notifiable_type == 'PostEntry' && notification.key == 'post_entry.deadline_today' %>
          アクションプランの期限が<span class="font-semibold text-red-500">今日まで</span>です
        <% elsif notification.notifiable_type == 'Comment' %>
          <span class="font-semibold"><%= notification.notifier&.name || '誰か' %></span>さんがあなたの投稿にコメントしました
        <% else %>
          新しい通知があります
        <% end %>
      </p>
      <p class="mt-1 text-xs text-gray-400">
        <%= time_ago_in_words(notification.created_at) %>前
      </p>
    </div>

    <%# 未読インジケータ %>
    <% unless notification.opened? %>
      <div class="flex-shrink-0 h-2 w-2 rounded-full bg-gray-900"></div>
    <% end %>
  </div>
<% end %>

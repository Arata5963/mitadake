<%# app/views/users/edit.html.erb %>
<% content_for :title, "プロフィール編集" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto px-4 py-6">

    <%# 戻るリンク %>
    <div class="mb-6">
      <%= link_to mypage_path, class: "inline-flex items-center gap-2 text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
        </svg>
        <span>マイページに戻る</span>
      <% end %>
    </div>

    <%= form_with(model: @user, url: mypage_path, method: :patch, local: true, html: { multipart: true }) do |form| %>
      <%# エラーメッセージ表示 %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <div>
              <h3 class="font-medium text-red-700">
                <%= pluralize(@user.errors.count, "件") %>のエラーがあります
              </h3>
              <ul class="mt-2 text-sm text-red-600 list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
        <%# プロフィール画像 %>
        <div class="p-5 border-b border-gray-100">
          <h2 class="text-sm font-medium text-gray-500 mb-4">プロフィール画像</h2>
          <div class="flex items-center gap-5">
            <div class="flex-shrink-0">
              <% if @user.avatar.present? %>
                <%= image_tag @user.avatar.url, alt: "現在のプロフィール画像", class: "h-16 w-16 rounded-full object-cover" %>
              <% else %>
                <div class="h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center">
                  <svg class="h-8 w-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            <label class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 cursor-pointer transition-colors">
              <%= form.file_field :avatar, accept: "image/*", class: "sr-only" %>
              <svg class="h-4 w-4 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-sm font-medium text-gray-700">画像を変更</span>
            </label>
          </div>
          <%= form.hidden_field :avatar_cache %>
        </div>

        <%# ユーザー名 %>
        <div class="p-5 border-b border-gray-100">
          <h2 class="text-sm font-medium text-gray-500 mb-3">ユーザー名</h2>
          <%= form.text_field :name,
                placeholder: "ユーザー名を入力",
                class: "w-full px-4 py-3 rounded-lg border border-gray-200 text-gray-900 placeholder-gray-400 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 focus:outline-none transition-colors" %>
        </div>

        <%# 好きな引用 %>
        <div class="p-5">
          <h2 class="text-sm font-medium text-gray-500 mb-1">好きな引用</h2>
          <p class="text-xs text-gray-400 mb-4">YouTubeから好きな言葉を引用しよう</p>
          <div class="space-y-4">
            <div>
              <label class="block text-xs text-gray-500 mb-1.5">引用テキスト</label>
              <%= form.text_field :favorite_quote,
                    placeholder: "例: 今日も頑張ろう！",
                    maxlength: 50,
                    class: "w-full px-4 py-3 rounded-lg border border-gray-200 text-gray-900 placeholder-gray-400 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 focus:outline-none transition-colors" %>
            </div>
            <div>
              <label class="block text-xs text-gray-500 mb-1.5">動画URL</label>
              <%= form.url_field :favorite_quote_url,
                    placeholder: "https://www.youtube.com/watch?v=...",
                    class: "w-full px-4 py-3 rounded-lg border border-gray-200 text-gray-900 placeholder-gray-400 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 focus:outline-none transition-colors" %>
            </div>
          </div>
        </div>
      </div>

      <%# ボタンエリア %>
      <div class="flex gap-4 mt-6">
        <%= link_to "キャンセル", mypage_path,
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 rounded-xl border border-gray-200 bg-white text-gray-700 font-medium hover:bg-gray-50 transition-colors" %>
        <%= form.submit "更新する",
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 rounded-xl bg-gray-900 text-white font-medium hover:bg-gray-800 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

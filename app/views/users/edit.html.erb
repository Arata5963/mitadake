<%# 設定ページ - UsersController#edit %>
<% content_for :title, "設定" %>

<div class="min-h-screen bg-white">
  <div class="max-w-md mx-auto px-4 py-16">

    <h1 class="text-xl font-bold text-gray-900 mb-8">設定</h1>

    <%= form_with(model: @user, url: mypage_path, method: :patch, local: true, html: { multipart: true, class: "space-y-6" }) do |form| %>
      <%# エラーメッセージ表示 %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <ul class="text-sm text-red-600 list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%# プロフィールセクション %>
      <div>
        <h2 class="text-sm font-bold text-gray-900 mb-6">プロフィール</h2>

        <div class="space-y-6">
          <%# プロフィール画像 %>
          <div data-controller="image-preview">
            <div class="flex items-center gap-4">
              <div class="flex-shrink-0">
                <% if @user.avatar.present? %>
                  <%= image_tag @user.avatar.url, alt: "現在のプロフィール画像", class: "h-14 w-14 rounded-full object-cover", data: { image_preview_target: "preview" } %>
                  <div class="h-14 w-14 bg-gray-100 rounded-full flex items-center justify-center hidden" data-image-preview-target="placeholder">
                    <svg class="h-7 w-7 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% else %>
                  <img src="" alt="プレビュー" class="h-14 w-14 rounded-full object-cover hidden" data-image-preview-target="preview">
                  <div class="h-14 w-14 bg-gray-100 rounded-full flex items-center justify-center" data-image-preview-target="placeholder">
                    <svg class="h-7 w-7 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
              </div>
              <label class="text-sm text-gray-900 font-medium hover:underline cursor-pointer">
                <%= form.file_field :avatar, accept: "image/*", class: "sr-only", data: { image_preview_target: "input", action: "change->image-preview#preview" } %>
                変更する
              </label>
            </div>
            <%= form.hidden_field :avatar_cache %>
          </div>

          <%# ユーザー名 %>
          <div>
            <%= form.label :name, "ユーザー名", class: "block text-xs text-gray-500 mb-1" %>
            <%= form.text_field :name,
                  placeholder: "ユーザー名を入力",
                  class: "w-full px-0 py-2 border-0 border-b border-gray-300 text-gray-900 placeholder-gray-300 focus:border-gray-900 focus:ring-0 focus:outline-none transition-colors bg-transparent" %>
          </div>

          <%# お気に入りの動画 %>
          <div data-controller="youtube-search" data-youtube-search-url-value="<%= youtube_search_posts_path %>">
            <label class="block text-xs text-gray-500 mb-1">お気に入りの動画</label>
            <div class="relative">
              <input type="text"
                     data-youtube-search-target="input"
                     data-action="input->youtube-search#handleInput"
                     placeholder="YouTubeで検索 または URLを貼り付け..."
                     value="<%= @user.favorite_quote_url %>"
                     class="w-full px-0 py-2 border-0 border-b border-gray-300 text-gray-900 placeholder-gray-300 focus:border-gray-900 focus:ring-0 focus:outline-none transition-colors bg-transparent">
              <div data-youtube-search-target="results"
                   class="hidden absolute z-20 w-full bg-white border border-gray-200 rounded-lg shadow-lg mt-1 max-h-64 overflow-y-auto">
              </div>
            </div>
            <%= form.hidden_field :favorite_quote_url, data: { youtube_search_target: "urlField" } %>
            <div data-youtube-search-target="preview" class="<%= @user.favorite_quote_url.present? ? '' : 'hidden' %> mt-3">
              <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                <% video_id = @user.favorite_quote_url&.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([a-zA-Z0-9_-]{11})/)&.[](1) %>
                <img data-youtube-search-target="thumbnail"
                     src="<%= video_id ? "https://img.youtube.com/vi/#{video_id}/hqdefault.jpg" : '' %>"
                     alt=""
                     class="w-20 h-12 object-cover rounded flex-shrink-0">
                <div class="flex-1 min-w-0">
                  <p data-youtube-search-target="title" class="text-sm font-medium text-gray-900 line-clamp-2">動画情報</p>
                  <p data-youtube-search-target="channel" class="text-xs text-gray-500 mt-0.5"></p>
                </div>
                <button type="button"
                        data-action="click->youtube-search#clearSelection"
                        class="flex-shrink-0 p-1 text-gray-400 hover:text-gray-600 transition-colors">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# アカウント設定セクション %>
      <div class="pt-6 mt-6">
        <h2 class="text-sm font-bold text-gray-900 mb-6">アカウント設定</h2>

        <div class="space-y-6">
          <%# メールアドレス %>
          <div>
            <%= form.label :email, "メールアドレス", class: "block text-xs text-gray-500 mb-1" %>
            <%= form.email_field :email,
                  autocomplete: "email",
                  class: "w-full px-0 py-2 border-0 border-b border-gray-300 text-gray-900 placeholder-gray-300 focus:border-gray-900 focus:ring-0 focus:outline-none transition-colors bg-transparent" %>
          </div>

          <%# パスワード %>
          <%= render 'shared/password_field',
                form: form,
                field_name: :current_password,
                label_text: "現在のパスワード",
                placeholder: "変更時は必須",
                autocomplete: "current-password" %>

          <%= render 'shared/password_field',
                form: form,
                field_name: :password,
                label_text: "新しいパスワード",
                placeholder: "変更しない場合は空欄",
                autocomplete: "new-password" %>

          <%= render 'shared/password_field',
                form: form,
                field_name: :password_confirmation,
                label_text: "新しいパスワード（確認）",
                placeholder: "変更しない場合は空欄",
                autocomplete: "new-password" %>

          <%# アカウント削除 %>
          <div class="pt-4">
            <%= link_to "アカウントを削除", registration_path(:user),
                  data: { turbo_method: :delete, turbo_confirm: "本当にアカウントを削除しますか？この操作は取り消せません。" },
                  class: "text-sm text-red-500 hover:text-red-700 transition-colors" %>
          </div>
        </div>
      </div>

      <%# 更新ボタン %>
      <div class="pt-6">
        <%= form.submit "更新する",
              class: "w-full bg-gray-900 text-white py-3 text-sm font-medium hover:bg-gray-800 transition-colors cursor-pointer" %>
      </div>
    <% end %>

  </div>
</div>

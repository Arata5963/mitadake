<%# app/views/posts/_section_posts_with_entries.html.erb %>
<%# 動画とみんなの投稿セクション（配置デザイン比較用） %>
<%# locals: posts %>

<% if posts.present? %>

  <%# ===== 案A: 縦並び（動画が上、アクションプランが下） ===== %>
  <section class="mb-12 p-4 border-2 border-dashed border-blue-200 rounded-lg">
    <div class="mb-4 flex items-center gap-2">
      <span class="text-xs font-bold text-blue-600 bg-blue-100 px-2 py-1 rounded">案A</span>
      <span class="text-sm text-gray-600">縦並び（動画が上、アクションプランが下）</span>
    </div>

    <div class="space-y-8">
      <% posts.first(2).each do |post| %>
        <% entries = post.post_entries.recent.limit(3) %>
        <% next if entries.empty? %>

        <article>
          <%# 動画カード %>
          <%= link_to post_path(post), class: "block mb-4" do %>
            <div class="flex gap-3 items-start">
              <div class="flex-shrink-0 w-32 rounded-lg overflow-hidden bg-gray-100" style="aspect-ratio: 16/9;">
                <%= image_tag post.youtube_thumbnail_url(size: :mqdefault),
                      alt: post.youtube_title,
                      class: "w-full h-full object-cover",
                      loading: "lazy" %>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-sm font-medium text-gray-900 line-clamp-2 hover:text-orange-600 transition-colors">
                  <%= post.youtube_title %>
                </h3>
                <p class="text-xs text-gray-500 mt-1"><%= post.youtube_channel_name %></p>
              </div>
            </div>
          <% end %>

          <%# アクションプラン一覧 %>
          <div class="pl-2">
            <% entries.each do |entry| %>
              <%= render 'posts/entry_bubble', entry: entry %>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </section>

  <%# ===== 案B: 横並び（左に動画、右にアクションプラン） ===== %>
  <section class="mb-12 p-4 border-2 border-dashed border-green-200 rounded-lg">
    <div class="mb-4 flex items-center gap-2">
      <span class="text-xs font-bold text-green-600 bg-green-100 px-2 py-1 rounded">案B</span>
      <span class="text-sm text-gray-600">横並び（左に動画、右にアクションプラン）</span>
    </div>

    <div class="space-y-6">
      <% posts.first(2).each do |post| %>
        <% entries = post.post_entries.recent.limit(3) %>
        <% next if entries.empty? %>

        <article class="flex gap-6 bg-white rounded-xl border border-gray-200 p-4">
          <%# 左: 動画 %>
          <%= link_to post_path(post), class: "flex-shrink-0 w-48" do %>
            <div class="rounded-lg overflow-hidden bg-gray-100 mb-2" style="aspect-ratio: 16/9;">
              <%= image_tag post.youtube_thumbnail_url(size: :mqdefault),
                    alt: post.youtube_title,
                    class: "w-full h-full object-cover",
                    loading: "lazy" %>
            </div>
            <h3 class="text-sm font-medium text-gray-900 line-clamp-2 hover:text-orange-600 transition-colors">
              <%= post.youtube_title %>
            </h3>
            <p class="text-xs text-gray-500 mt-1"><%= post.youtube_channel_name %></p>
          <% end %>

          <%# 右: アクションプラン %>
          <div class="flex-1 min-w-0">
            <p class="text-xs text-gray-400 mb-2">みんなのアクションプラン</p>
            <% entries.each do |entry| %>
              <%= render 'posts/entry_bubble', entry: entry %>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </section>

  <%# ===== 案C: カード統合（1つのカード内に収める） ===== %>
  <section class="mb-12 p-4 border-2 border-dashed border-purple-200 rounded-lg">
    <div class="mb-4 flex items-center gap-2">
      <span class="text-xs font-bold text-purple-600 bg-purple-100 px-2 py-1 rounded">案C</span>
      <span class="text-sm text-gray-600">カード統合（動画とアクションプランを1つのカード内に）</span>
    </div>

    <div class="grid gap-6" style="grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));">
      <% posts.first(3).each do |post| %>
        <% entries = post.post_entries.recent.limit(3) %>
        <% next if entries.empty? %>

        <article class="bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
          <%# 動画部分 %>
          <%= link_to post_path(post), class: "block" do %>
            <div class="aspect-video bg-gray-100">
              <%= image_tag post.youtube_thumbnail_url(size: :mqdefault),
                    alt: post.youtube_title,
                    class: "w-full h-full object-cover",
                    loading: "lazy" %>
            </div>
            <div class="p-3">
              <h3 class="text-sm font-medium text-gray-900 line-clamp-2 hover:text-orange-600 transition-colors">
                <%= post.youtube_title %>
              </h3>
              <p class="text-xs text-gray-500 mt-1"><%= post.youtube_channel_name %></p>
            </div>
          <% end %>

          <%# アクションプラン %>
          <div class="border-t border-gray-100 px-3 py-3 bg-gray-50">
            <% entries.each do |entry| %>
              <%= render 'posts/entry_bubble_compact', entry: entry %>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </section>

  <%# ===== 案D: コンパクト（小サムネ + 1アクションプラン横並び） ===== %>
  <section class="mb-12 p-4 border-2 border-dashed border-orange-200 rounded-lg">
    <div class="mb-4 flex items-center gap-2">
      <span class="text-xs font-bold text-orange-600 bg-orange-100 px-2 py-1 rounded">案D</span>
      <span class="text-sm text-gray-600">コンパクト（小サムネ + 1アクションプラン横並び）</span>
    </div>

    <div class="space-y-3">
      <% posts.first(3).each do |post| %>
        <% entries = post.post_entries.recent.limit(2) %>
        <% entries.each do |entry| %>
          <article class="flex items-start gap-3 bg-white rounded-xl border border-gray-200 p-3 hover:shadow-md transition-shadow">
            <%# 小さいサムネイル %>
            <%= link_to post_path(post), class: "flex-shrink-0" do %>
              <div class="w-20 rounded-lg overflow-hidden bg-gray-100" style="aspect-ratio: 16/9;">
                <%= image_tag post.youtube_thumbnail_url(size: :default),
                      alt: post.youtube_title,
                      class: "w-full h-full object-cover",
                      loading: "lazy" %>
              </div>
            <% end %>

            <%# アクションプラン（吹き出し簡易版） %>
            <div class="flex-1 min-w-0 flex items-start gap-2">
              <%# アバター %>
              <% if entry.user&.avatar.present? %>
                <%= image_tag entry.user.avatar.url, class: "flex-shrink-0 w-8 h-8 rounded-lg object-cover" %>
              <% else %>
                <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-xs">
                  <%= entry.user&.name&.first&.upcase || '?' %>
                </div>
              <% end %>

              <div class="flex-1 min-w-0">
                <p class="text-xs text-gray-500 mb-0.5"><%= entry.user&.name %></p>
                <p class="text-sm text-gray-800 line-clamp-2"><%= entry.content %></p>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </section>

  <%# ===== 案E: フィード型（動画大きく、アクションプラン横スクロール） ===== %>
  <section class="mb-12 p-4 border-2 border-dashed border-pink-200 rounded-lg">
    <div class="mb-4 flex items-center gap-2">
      <span class="text-xs font-bold text-pink-600 bg-pink-100 px-2 py-1 rounded">案E</span>
      <span class="text-sm text-gray-600">フィード型（動画大きく、アクションプラン横スクロール）</span>
    </div>

    <div class="space-y-8 max-w-lg mx-auto">
      <% posts.first(2).each do |post| %>
        <% entries = post.post_entries.recent.limit(5) %>
        <% next if entries.empty? %>

        <article>
          <%# 大きな動画 %>
          <%= link_to post_path(post), class: "block mb-3" do %>
            <div class="aspect-video rounded-xl overflow-hidden bg-gray-100">
              <%= image_tag post.youtube_thumbnail_url(size: :hqdefault),
                    alt: post.youtube_title,
                    class: "w-full h-full object-cover",
                    loading: "lazy" %>
            </div>
            <div class="mt-3">
              <h3 class="text-base font-medium text-gray-900 line-clamp-2 hover:text-orange-600 transition-colors">
                <%= post.youtube_title %>
              </h3>
              <p class="text-sm text-gray-500 mt-1"><%= post.youtube_channel_name %></p>
            </div>
          <% end %>

          <%# アクションプラン横スクロール %>
          <div class="flex gap-3 overflow-x-auto pb-2" style="-ms-overflow-style: none; scrollbar-width: none;">
            <% entries.each do |entry| %>
              <div class="flex-shrink-0 w-64 bg-white rounded-xl border border-gray-200 p-3">
                <div class="flex items-center gap-2 mb-2">
                  <% if entry.user&.avatar.present? %>
                    <%= image_tag entry.user.avatar.url, class: "w-7 h-7 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-7 h-7 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-[10px]">
                      <%= entry.user&.name&.first&.upcase || '?' %>
                    </div>
                  <% end %>
                  <span class="text-xs font-medium text-gray-700"><%= entry.user&.name %></span>
                </div>
                <p class="text-sm text-gray-600 line-clamp-3"><%= entry.content %></p>
              </div>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </section>

<% end %>

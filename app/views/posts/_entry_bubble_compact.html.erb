<%# app/views/posts/_entry_bubble_compact.html.erb %>
<%# コンパクト版エントリー表示（カード統合用） %>

<div class="flex items-start gap-2 py-2">
  <%# アバター（小さめ） %>
  <% if entry.user&.avatar.present? %>
    <%= image_tag entry.user.avatar.url, class: "flex-shrink-0 w-7 h-7 rounded-lg object-cover" %>
  <% else %>
    <div class="flex-shrink-0 w-7 h-7 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-[10px]">
      <%= entry.user&.name&.first&.upcase || '?' %>
    </div>
  <% end %>

  <%# コンテンツ %>
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2 mb-0.5">
      <span class="text-xs font-medium text-gray-700 truncate"><%= entry.user&.name %></span>
      <span class="text-[10px] text-gray-400"><%= entry.created_at.strftime("%m/%d") %></span>
    </div>
    <p class="text-sm text-gray-600 line-clamp-2"><%= entry.content %></p>
  </div>
</div>

<%# app/views/shared/_header.html.erb %>
<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-14 items-center justify-between gap-4">

      <%# 左側：ロゴ（クリックでホームへ） %>
      <div class="flex-shrink-0">
        <%= link_to posts_path, class: "flex items-center gap-2 text-gray-900 hover:text-gray-600 transition-colors" do %>
          <%= image_tag "/favicon-32x32.png", alt: "mitadake?", class: "w-7 h-7 rounded-lg" %>
          <span class="text-lg font-bold tracking-tight">mitadake?</span>
        <% end %>
      </div>

      <%# 右側：ナビゲーションアイコン %>
      <div class="flex items-center gap-1" data-controller="sidebar">

        <%# 通知 %>
        <% if user_signed_in? %>
          <%= link_to notifications_path,
                class: "relative p-2 rounded-full transition-colors #{current_page?(notifications_path) ? 'text-gray-900 bg-gray-100' : 'text-gray-500 hover:text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
            </svg>
            <% unread_count = current_user.notifications.unopened_only.count %>
            <% if unread_count > 0 %>
              <span class="absolute top-0.5 right-0.5 h-4 w-4 rounded-full bg-gray-900 text-white text-[10px] font-bold flex items-center justify-center">
                <%= unread_count > 9 ? '9+' : unread_count %>
              </span>
            <% end %>
          <% end %>
        <% end %>

        <%# プロフィール / サイドバートリガー %>
        <button type="button"
                data-action="click->sidebar#open"
                class="p-1 rounded-full transition-colors text-gray-500 hover:text-gray-700 hover:bg-gray-100 cursor-pointer">
          <% if user_signed_in? && current_user.avatar.present? %>
            <%= image_tag current_user.avatar.url, class: "w-8 h-8 rounded-full object-cover" %>
          <% else %>
            <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-500" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
          <% end %>
        </button>

        <%# サイドバー %>
        <%= render "shared/sidebar" %>
      </div>
    </div>
  </div>
</header>
